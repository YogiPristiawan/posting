{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "semi": ["error", "never"],
        "no-use-before-define": ["error", {
            "functions": false,
            "classes": true,
            "variables": true,
            "allowNamedExports": false
        }],
        "no-shadow": ["warn", { 
            "builtinGlobals": true, 
            "hoist": "functions", 
            "allow": [],
            "ignoreOnInitialization": false 
        }],
        "default-case": ["off"],
        "class-methods-use-this": ["off"],
        "consistent-return": ["off"]
    }
}
